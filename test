from docx import Document
from docx.shared import Pt, Mm


# Открыть документ
doc = Document("new_resume.docx")
all_tables = doc.tables
# Перебрать все параграфы и заменить текст
for i, table in enumerate(all_tables):
        for j, row in enumerate(table.rows):
            for cell in row.cells:
                for word in cell.text.split():
                    if '_test' in word:
                            cell.text = cell.text.replace(word, 'Chaeck')
                            print(cell.text)

for i, table in enumerate(all_tables):
    for j, row in enumerate(table.rows):
        for cell in row.cells:
            for word in cell.text.split():
                if cell.text == 'profile_photo':
                    if 'profile_photo' in word:
                        cell.text = cell.text.replace(word, '')
                    p = cell.paragraphs[0]
                    run = p.add_run()
                    run.add_picture('./userquest.jpg', width=Mm(60))


# Сохранить новый документ
doc.save("user_check.docx")
